<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".PreviewLogin">


    <TextView
        android:id="@+id/TitleEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="20dp"
        android:text="Entrar "
        android:textColor="@color/font_text"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="324dp"
        android:layout_height="90dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="60dp"
        android:text="A sua empresa que se preocupa com meio ambiente"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/BotaoPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleEntrar" />

    <Button
        android:id="@+id/BotaoPreview"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/botao"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/BotaoPreview1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/BotaoPreview1"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_border"
        android:text="Cadastra-se"
        app:layout_constraintBottom_toTopOf="@+id/BotaoPreview2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotaoPreview" />

    <Button
        android:id="@+id/BotaoPreview2"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="235dp"
        android:background="@drawable/button_border"
        android:text="Entrar sem login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotaoPreview1" />

</androidx.constraintlayout.widget.ConstraintLayout>